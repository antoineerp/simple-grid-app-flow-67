
# Activer le moteur de réécriture
RewriteEngine On

# Configuration des types MIME - Critique pour les modules JavaScript
AddType application/javascript .js
AddType application/javascript .mjs
AddType application/javascript .es.js
AddType text/css .css

# Force le bon type MIME pour JavaScript
<FilesMatch "\.(js|mjs|es\.js)$">
    Header set Content-Type "application/javascript"
    Header set X-Content-Type-Options "nosniff"
</FilesMatch>

# En-têtes de cache pour les assets
<FilesMatch "\.(js|mjs|css)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

# Autoriser l'accès aux fichiers
<Files *>
    Order Allow,Deny
    Allow from all
</Files>
