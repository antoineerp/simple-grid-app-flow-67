
# Activer le moteur de réécriture
RewriteEngine On

# Configuration des types MIME
AddType application/javascript .js
AddType application/javascript .mjs
AddType text/css .css

# Forcer explicitement le type MIME pour CSS
<FilesMatch "\.css$">
    ForceType text/css
    Header set Content-Type "text/css; charset=utf-8"
</FilesMatch>

<FilesMatch "\.js$">
    ForceType application/javascript
    Header set Content-Type "application/javascript; charset=utf-8"
</FilesMatch>

# En-têtes de cache pour les assets - éviter must-revalidate
<FilesMatch "\.(js|mjs|css|jpg|jpeg|png|gif|svg)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>

# Autoriser l'accès aux fichiers
<Files *>
    Order Allow,Deny
    Allow from all
</Files>

# Ajouter l'en-tête X-Content-Type-Options
Header set X-Content-Type-Options "nosniff"
