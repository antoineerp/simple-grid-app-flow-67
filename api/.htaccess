# Configuration spécifique pour le dossier API - FORCER PHP
AddHandler application/x-httpd-php .php
ForceType application/x-httpd-php
php_flag display_errors on
php_value error_reporting 32767

# Activer le moteur de réécriture
RewriteEngine On
Options +ExecCGI

# IMPORTANT : Configuration forcée pour PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
    ForceType application/x-httpd-php
</FilesMatch>

# Test pour forcer l'interprétation PHP sur tous les fichiers dans ce dossier
<Files *>
    SetHandler application/x-httpd-php
</Files>

# Configuration des en-têtes
<IfModule mod_headers.c>
    # Activer CORS
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
    Header always set Access-Control-Max-Age "1728000"
    
    # Désactiver la mise en cache
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
    
    # Forcer le type de contenu pour PHP
    Header set Content-Type "application/json" env=IS_JSON_RESPONSE
</IfModule>

# Gérer les requêtes OPTIONS pour CORS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Permettre l'accès direct aux fichiers PHP
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.+)\.php$ $1.php [L]

# Fallback vers index.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php [QSA,L]
