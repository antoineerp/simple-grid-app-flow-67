
# Force PHP execution - CRITICAL SECTION
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Enable rewrite engine and options
Options +FollowSymLinks +ExecCGI
RewriteEngine On

# Force PHP MIME type and handler
AddType application/x-httpd-php .php
AddHandler application/x-httpd-php .php

# If mod_php is available, configure it
<IfModule mod_php.c>
    php_flag display_errors on
    php_value error_reporting 32767
    php_value output_buffering 4096
</IfModule>

# Try with legacy PHP module naming
<IfModule mod_php7.c>
    php_flag display_errors on
    php_value error_reporting 32767
    php_value output_buffering 4096
</IfModule>

<IfModule mod_php8.c>
    php_flag display_errors on
    php_value error_reporting 32767
    php_value output_buffering 4096
</IfModule>

# CRITICAL: Force the path_info for PHP
<IfModule !mod_php.c>
    <IfModule !mod_php7.c>
        <IfModule !mod_php8.c>
            Action application/x-httpd-php "/usr/bin/php-cgi"
            SetEnv PHPRC /etc/php/php.ini
        </IfModule>
    </IfModule>
</IfModule>

# Enforce UTF-8 for PHP files
<FilesMatch "\.php$">
    AddDefaultCharset UTF-8
</FilesMatch>

# Handle API routes
RewriteCond %{REQUEST_URI} ^/api/login-test.php$
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ login-test.php [QSA,L]

RewriteCond %{REQUEST_URI} ^/api/auth$
RewriteCond %{DOCUMENT_ROOT}/api/auth.php -f
RewriteRule ^(.*)$ auth.php [QSA,L]

RewriteCond %{REQUEST_URI} ^/api/api-debug.php$
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ api-debug.php [QSA,L]

RewriteCond %{REQUEST_URI} ^/api/test-auth.php$
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ test-auth.php [QSA,L]

RewriteCond %{REQUEST_URI} ^/api/php-simple-test.php$
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ php-simple-test.php [QSA,L]

# CORS headers
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
Header set Access-Control-Allow-Headers "Content-Type, Authorization"

# Cache control
Header set Cache-Control "no-cache, no-store, must-revalidate"
Header set Pragma "no-cache"
Header set Expires "0"

# Default charset
AddDefaultCharset UTF-8
