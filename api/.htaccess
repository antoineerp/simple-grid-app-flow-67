
# Activer la réécriture d'URL
RewriteEngine On

# Forcer HTTPS (décommenter si nécessaire)
# RewriteCond %{HTTPS} off
# RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Base du répertoire
RewriteBase /api/

# Autoriser l'accès direct aux fichiers existants
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Redirection prioritaire pour db-connection-test
RewriteRule ^db-connection-test/?$ db-connection-test.php [L,NC]
RewriteRule ^database-test/?$ db-connection-test.php [L,NC]
RewriteRule ^db-test/?$ db-connection-test.php [L,NC]

# Redirection du test utilisateurs
RewriteRule ^check-users/?$ check-users.php [L,NC]
RewriteRule ^utilisateurs/?$ utilisateurs.php [L,NC]

# Redirection généralisée pour les contrôleurs
RewriteRule ^([^/]+)/?$ controllers/$1Controller.php [L,NC]

# Redirection générale pour les autres routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ $1.php [L,NC]

# Forcer PHP à traiter les fichiers .php
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Forcer le type MIME pour les réponses JSON
<FilesMatch "\.(php)$">
    Header always set Content-Type "application/json; charset=UTF-8"
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header set Cache-Control "no-cache, no-store, must-revalidate"
</FilesMatch>
