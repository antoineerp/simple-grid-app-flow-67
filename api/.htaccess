
# Activer la réécriture d'URL
RewriteEngine On

# Définir les types MIME corrects
AddType application/javascript .js
AddType application/javascript .mjs
AddType application/javascript .es.js
AddType text/css .css
AddType application/json .json

# Forcer l'exécution des fichiers PHP dans ce dossier
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Vérifier que PHP est bien configuré et exécuté
<IfModule mod_php.c>
    php_flag display_errors off
    php_value error_log "php_errors.log"
    php_flag log_errors on
    php_value upload_max_filesize "16M"
    php_value post_max_size "16M"
    php_value memory_limit "128M"
    php_value max_execution_time 300
</IfModule>

# Alternative pour FastCGI
<IfModule mod_fcgid.c>
    AddHandler fcgid-script .php
    FcgidWrapper /usr/local/bin/php-cgi .php
</IfModule>

# Gérer les requêtes OPTIONS pour CORS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Configuration CORS et types MIME
<IfModule mod_headers.c>
    # Force le bon type MIME pour les JavaScript modules
    <FilesMatch "\.(m?js|es\.js)$">
        Header set Content-Type "application/javascript"
        Header set X-Content-Type-Options "nosniff"
    </FilesMatch>
    
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    
    # Eviter la mise en cache
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</IfModule>

# ATTENTION: Correction des règles qui causaient une boucle infinie
# Permettre l'accès direct aux fichiers PHP spécifiques
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule \.php$ - [L]

# IMPORTANT: Ne pas rediriger les fichiers qui n'existent pas vers index.php si on est déjà dans le dossier API
# Rediriger uniquement les requêtes vers des endpoints spécifiés qui n'ont pas de fichier correspondant
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(users|diagnostic|config|database-diagnostic|db-info)/?$ index.php [QSA,L]

# Définition d'une page d'erreur JSON personnalisée pour les erreurs
ErrorDocument 500 '{"status":"error","message":"Erreur interne du serveur","code":500}'
ErrorDocument 404 '{"status":"error","message":"Ressource non trouvée","code":404}'
ErrorDocument 403 '{"status":"error","message":"Accès interdit","code":403}'
