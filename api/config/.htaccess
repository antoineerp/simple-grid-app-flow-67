
# Interdire l'accès direct à ce répertoire
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Protection supplémentaire pour les fichiers sensibles
<FilesMatch "^(db_config\.json|env\.php)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Empêcher le listage du répertoire
Options -Indexes
