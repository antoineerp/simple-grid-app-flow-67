
# Activer le moteur de réécriture
RewriteEngine On

# Configuration spécifique pour Infomaniak
Options -MultiViews
Options +FollowSymLinks

# Définir le point d'entrée principal
DirectoryIndex index.html index.php

# Bloquer l'accès direct aux fichiers source
RewriteRule ^src/ - [F,L]

# Définir les types MIME corrects
AddType application/javascript .js
AddType text/css .css
AddType application/json .json
AddType image/svg+xml .svg

# Permettre l'accès aux assets
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|map)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Traitement spécial pour lovable-uploads - CORRECTION DU DOUBLE SLASH
RewriteRule ^lovable-uploads/(.*)$ public/lovable-uploads/$1 [L]

# Diagnostic des requêtes API en mode production
RewriteCond %{REQUEST_URI} ^/api
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule .* - [E=API_DEBUG:1]

# Rediriger les requêtes vers /api vers le dossier api (sans slash final)
RewriteRule ^api$ api/ [R=301,L]

# Rediriger les requêtes vers /api/ vers le fichier index.php dans le dossier api
RewriteRule ^api/(.*)$ api/index.php [QSA,L]

# Règle pour servir les assets compilés
RewriteRule ^assets/(.*)$ dist/assets/$1 [L]

# Permettre l'accès direct aux autres ressources statiques
RewriteCond %{REQUEST_URI} \.(js|css|png|jpe?g|gif|svg|ico|webp|woff2?|ttf|eot|map)$
RewriteRule ^ - [L]

# Rediriger toutes les autres requêtes vers index.html pour React Router
RewriteRule ^(?!api/).*$ index.html [QSA,L]

# Configuration de sécurité
<IfModule mod_headers.c>
    # Configuration pour les assets statiques
    <FilesMatch "\.(js|css|json)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>
