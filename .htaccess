
# Activer le moteur de réécriture
RewriteEngine On

# Ne pas appliquer les règles aux fichiers et répertoires existants
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rediriger les requêtes non-fichier vers index.html (pour le routage côté client)
RewriteRule ^(.*)$ index.html [L]

# Configuration des types MIME pour JavaScript
AddType application/javascript .js
AddType application/javascript .mjs
AddType application/javascript .cjs

# Configuration spécifique pour les Service Workers
<Files "sync-service-worker.js">
    Header set Content-Type "application/javascript"
    Header set Service-Worker-Allowed "/"
    Header set X-Content-Type-Options "nosniff"
</Files>

# Configuration des autres types MIME
AddType text/css .css
AddType application/json .json
AddType image/svg+xml .svg

# En-têtes de sécurité
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    
    # Autoriser le chargement de modules ES
    <FilesMatch "\.(js|mjs|es\.js)$">
        Header set Content-Type "application/javascript"
    </FilesMatch>
</IfModule>

# Configuration spécifique pour PHP - s'assurer que PHP est correctement interprété
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>
