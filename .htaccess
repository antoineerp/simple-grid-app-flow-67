
# Configuration simplifiée pour résoudre l'erreur 500
RewriteEngine On

# Activer le moteur de réécriture sans options complexes
RewriteBase /

# Assurer l'exécution des scripts PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Rediriger les requêtes API vers le dossier api
RewriteRule ^api(/.*)?$ api$1 [L]

# Rediriger toutes les autres requêtes vers index.html pour le routage React
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(?!api/) index.html [L]

# Index par défaut
DirectoryIndex index.html index.php

# Configuration UTF-8
AddDefaultCharset UTF-8
