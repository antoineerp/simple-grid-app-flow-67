
# Activer le moteur de réécriture
RewriteEngine On

# Configuration spécifique pour Infomaniak
Options -MultiViews

# Définir le point d'entrée principal
DirectoryIndex index.html index.php

# Ne pas rediriger les requêtes vers des fichiers ou dossiers réels
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rediriger les requêtes vers /api vers le dossier api
RewriteRule ^api/(.*)$ api/$1 [QSA,L]

# Permettre l'accès direct aux ressources statiques
RewriteCond %{REQUEST_URI} \.(js|css|png|jpe?g|gif|svg|ico|webp|woff2?|ttf|eot|map)$
RewriteRule ^ - [L]

# Rediriger toutes les autres requêtes vers index.html pour React Router
RewriteRule ^(?!api/).*$ index.html [QSA,L]

# Configuration de sécurité
<IfModule mod_headers.c>
    # Désactiver la mise en cache pour les fichiers d'application
    <FilesMatch "\.(html|js|json)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Activer la mise en cache pour les ressources statiques
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|css|svg|webp|woff2?|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>

# Compresser les fichiers pour améliorer les performances
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

# Définir correctement l'encodage pour les fichiers texte
AddDefaultCharset UTF-8
