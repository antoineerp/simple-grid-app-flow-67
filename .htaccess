
# Activer le moteur de réécriture
RewriteEngine On

# Ne pas appliquer les règles aux fichiers et répertoires existants
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Spécifier explicitement le handler PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Activer le moteur PHP s'il est disponible
<IfModule mod_php.c>
    php_flag engine on
</IfModule>

# Autoriser PHP en tant que module FastCGI
<IfModule mod_fastcgi.c>
    <FilesMatch "\.php$">
        SetHandler php-fcgi
    </FilesMatch>
</IfModule>

# Autoriser PHP via CGI
<IfModule mod_cgi.c>
    <FilesMatch "\.php$">
        SetHandler cgi-script
    </FilesMatch>
</IfModule>

# Rediriger les requêtes non-fichier vers index.html (pour le routage côté client)
RewriteRule ^(.*)$ index.html [L]

# Configuration des types MIME pour JavaScript
AddType application/javascript .js
AddType application/javascript .mjs
AddType application/javascript .cjs

# Configuration spécifique pour les Service Workers
<Files "sync-service-worker.js">
    Header set Content-Type "application/javascript"
    Header set Service-Worker-Allowed "/"
    Header set X-Content-Type-Options "nosniff"
</Files>

# Configuration des autres types MIME
AddType text/css .css
AddType application/json .json
AddType image/svg+xml .svg

# En-têtes de sécurité
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    
    # Autoriser le chargement de modules ES
    <FilesMatch "\.(js|mjs|es\.js)$">
        Header set Content-Type "application/javascript"
    </FilesMatch>
</IfModule>
