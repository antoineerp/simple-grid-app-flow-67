
# Configuration avancée pour l'exécution PHP sur Infomaniak
Options -MultiViews
Options +FollowSymLinks

# Forcer l'exécution PHP pour tous les fichiers
<IfModule mod_php.c>
    php_flag engine on
    php_value default_charset "UTF-8"
</IfModule>

<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
    ForceType application/x-httpd-php
</FilesMatch>

AddHandler application/x-httpd-php .php
AddType application/x-httpd-php .php

# Règles de routage et de sécurité
RewriteEngine On
DirectoryIndex index.php index.html
