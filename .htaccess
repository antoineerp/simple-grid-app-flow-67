
# Activer le module de réécriture
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Si le fichier demandé existe physiquement, l'utiliser directement
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # S'assurer que les requêtes vers /api/ sont traitées correctement
    RewriteRule ^api/(.*)$ api/$1 [L,QSA]

    # Rediriger toutes les autres requêtes vers index.html pour React Router
    RewriteRule ^ index.html [L]
</IfModule>

# S'assurer que les fichiers PHP sont correctement interprétés
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Forcer le type MIME pour les fichiers JavaScript et CSS
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
</IfModule>

# Protection contre l'accès aux fichiers sensibles
<FilesMatch "(\.env|\.gitignore|package\.json|package-lock\.json|composer\.json|composer\.lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Activer la compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Définir les en-têtes de cache
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>
