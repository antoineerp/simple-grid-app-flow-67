
# Activation du moteur de réécriture
RewriteEngine On
RewriteBase /

# Forcer l'exécution des scripts PHP
<Files *.php>
    SetHandler application/x-httpd-php
</Files>

# Forcer l'utilisation de PHP 8.x si disponible
<IfModule mod_php8.c>
    php_flag display_errors on
    php_value error_reporting E_ALL
</IfModule>

# Si PHP 8 n'est pas disponible, utiliser PHP 7.x
<IfModule mod_php7.c>
    php_flag display_errors on
    php_value error_reporting E_ALL
</IfModule>

# Assurer que les fichiers .php sont correctement interprétés
<IfModule mod_mime.c>
    AddType application/x-httpd-php .php
</IfModule>

# Rediriger toutes les requêtes vers l'API directement vers /api
RewriteRule ^api(/.*)?$ api$1 [L]

# Rediriger toutes les requêtes non-fichiers vers index.html pour le routing React
<IfModule mod_rewrite.c>
    # Si le fichier ou dossier demandé existe réellement, servir directement
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Ne pas rediriger les requêtes vers /api
    RewriteRule ^api/ - [L]
    
    # Rediriger toutes les autres requêtes vers index.html
    RewriteRule ^ index.html [L]
</IfModule>

# Configuration UTF-8
AddDefaultCharset UTF-8

# Index par défaut
DirectoryIndex index.html index.php
